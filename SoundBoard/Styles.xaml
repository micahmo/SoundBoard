<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">

    <SolidColorBrush x:Key="HighlightColor" Color="DarkGray"/>

    <Style xmlns:markup="http://schemas.microsoft.com/winfx/2006/xaml"
           x:Key="MyHighlightedSquareButtonStyle" TargetType="{markup:Type ButtonBase}"
           BasedOn="{StaticResource SquareButtonStyle}">
        <Setter Property="Background" Value="{DynamicResource HighlightColor}"/>
        <Setter Property="mah:ButtonHelper.PreserveTextCase" Value="True"/>
    </Style>

    <Style xmlns:markup="http://schemas.microsoft.com/winfx/2006/xaml"
           x:Key="MyAccentedSquareButtonStyle" TargetType="{markup:Type ButtonBase}"
           BasedOn="{StaticResource AccentedSquareButtonStyle}">
        <Setter Property="mah:ButtonHelper.PreserveTextCase" Value="True"/>
    </Style>

    <Style xmlns:markup="http://schemas.microsoft.com/winfx/2006/xaml"
           x:Key="MySquareButtonStyle" TargetType="{markup:Type ButtonBase}"
           BasedOn="{StaticResource SquareButtonStyle}">
        <Setter Property="mah:ButtonHelper.PreserveTextCase" Value="True"/>
    </Style>

</ResourceDictionary>